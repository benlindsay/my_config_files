# This is Git's per-user configuration file.
[user]
	email = benjlindsay@gmail.com
	name = Ben Lindsay
[push]
	default = simple
	followTags = true
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
	br = branch
	cm = commit
	co = checkout
	graph = log --graph --oneline --decorate --all
	last = log -1 HEAD
	pom = push origin master
        root = rev-parse --show-toplevel
	st = status
	unstage = reset HEAD --
[color]
        diff = auto
        status = auto
        branch = auto
[color "status"]
        changed = yellow
        added = green
        untracked = red
[init]
	defaultBranch = main
